[Unit]
Description=Nostr Hero Webhook Listener for Auto-Deployment
After=network.target

[Service]
Type=simple
User=REPLACE_WITH_USERNAME
WorkingDirectory=/path/to/nostr-hero
ExecStart=/usr/bin/webhook -hooks /path/to/nostr-hero/scripts/webhook-hooks.json -verbose -port 9000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
