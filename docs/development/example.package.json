{
  "name": "nostr-hero",
  "version": "1.0.0",
  "description": "D&D 5e-inspired RPG using Nostr authentication",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:css": "tailwindcss -c ./www/res/style/tailwind.config.js -i ./www/res/style/input.css -o ./www/res/style/output.css --watch",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:css\" --names \"vite,css\" --prefix-colors \"blue,green\"",
    "build": "npm run build:css && vite build --mode production",
    "build:dev": "npm run build:css && vite build --mode development",
    "build:css": "tailwindcss -c ./www/res/style/tailwind.config.js -i ./www/res/style/input.css -o ./www/res/style/output.css --minify",
    "preview": "vite preview",
    "clean": "rimraf www/dist"
  },
  "keywords": ["nostr", "rpg", "dnd", "game"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "vite": "^5.0.0",
    "rimraf": "^5.0.0",
    "tailwindcss": "^3.4.0",
    "concurrently": "^8.2.0"
  }
}
